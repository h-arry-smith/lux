program = _{ SOI ~ "\n"* ~ (stmt ~ "\n"+)* ~ stmt? ~ EOI }
stmt = { select | assign }

select = { query ~ "{" ~ "\n"* ~ (stmt ~ "\n"+)*  ~ "}"}
query = { numeric } 

assign = { ident ~ ":" ~ value }
value = { numeric }

ident = @{ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_")* }
numeric = @{ ("+" | "-")? ~ ASCII_DIGIT+ ~ ("." ~ ASCII_DIGIT+)? }

WHITESPACE = _{ " " | "\t" }
